pipeline {
  agent none
  stages {
    stage('BuildAndTest') {
      matrix {
        agent {
          label "${PLATFORM}"
        }
        axes {
          axis {
            name 'PLATFORM'
            values 'linux', 'macos'
          }
        }
        stages {
          stage('Build') {
            steps {
              sh 'echo Do Build for $PLATFORM'
            }
          }
          stage('Test') {
            steps {
              sh 'echo Do Test for $PLATFORM'
            }
          }
        }
      }
    }
  }
}